# =============================================================================
# example-vs.env — Example configuration for VS Demo scripts
# =============================================================================
#
# Copy this file, edit the values, then source it before running the scripts:
#
#   cp config/example-vs.env my-vs.env
#   # Edit my-vs.env with your values
#   source my-vs.env
#   ./scripts/vs-demo/01-deploy-vs.sh
#   ./scripts/vs-demo/02-create-trust-registry.sh
#
# =============================================================================

# ---------------------------------------------------------------------------
# Network: devnet or testnet
# ---------------------------------------------------------------------------
export NETWORK="testnet"

# ---------------------------------------------------------------------------
# VS Agent Docker configuration
# ---------------------------------------------------------------------------
export VS_AGENT_IMAGE="veranalabs/vs-agent:latest"
export VS_AGENT_CONTAINER_NAME="vs-demo"
export VS_AGENT_ADMIN_PORT="3000"
export VS_AGENT_PUBLIC_PORT="3001"

# ---------------------------------------------------------------------------
# Veranad CLI account name
# ---------------------------------------------------------------------------
export USER_ACC="vs-demo-admin"

# ---------------------------------------------------------------------------
# ECS Trust Registry IDs
# Provide a path to the ECS IDs file OR set CS_SERVICE_ID directly.
# The ECS IDs file is generated by the ECS Trust Registry setup scripts.
# ---------------------------------------------------------------------------
# export ECS_IDS_FILE="testnet-ecs-ids.env"
# export CS_SERVICE_ID="99"

# ---------------------------------------------------------------------------
# Organization details
# These appear in the Organization credential issued by the ECS TR.
# ---------------------------------------------------------------------------
export ORG_NAME="Verana Example Organization"
export ORG_COUNTRY="CH"
export ORG_LOGO_URL="https://verana.io/logo.svg"
export ORG_REGISTRY_ID="CH-CHE-123.456.789"
export ORG_ADDRESS="Bahnhofstrasse 42, 8001 Zurich, Switzerland"

# ---------------------------------------------------------------------------
# Service details
# These appear in the Service credential self-issued by the VS Agent.
# ---------------------------------------------------------------------------
export SERVICE_NAME="Example Verana Service"
export SERVICE_TYPE="IssuerService"
export SERVICE_DESCRIPTION="An example service using Verana, the Open Trust Layer"
export SERVICE_LOGO_URL="https://verana.io/logo.svg"
export SERVICE_MIN_AGE="0"
export SERVICE_TERMS="https://verana-labs.github.io/governance-docs/EGF/example.pdf"
export SERVICE_PRIVACY="https://verana-labs.github.io/governance-docs/EGF/example.pdf"

# ---------------------------------------------------------------------------
# Trust Registry configuration (required for 02-create-trust-registry.sh)
# ---------------------------------------------------------------------------

# URL of the JSON schema to register in your Trust Registry
export CUSTOM_SCHEMA_URL="https://verana-labs.github.io/verifiable-trust-spec/schemas/v4/example.json"

# Base ID for the VTJSC (used in DID Document service entries)
export CUSTOM_SCHEMA_BASE_ID="example"

# Ecosystem Governance Framework document
# Digest is auto-calculated at runtime if left empty.
export EGF_DOC_URL="https://verana-labs.github.io/governance-docs/EGF/example.pdf"
# export EGF_DOC_DIGEST=""

# Trust Registry URL (defaults to the ngrok URL from Part 1)
# export TR_REGISTRY_URL="https://my-service.example.com"

# ---------------------------------------------------------------------------
# AnonCreds (optional — set to true to enable dual W3C + AnonCreds issuance)
# ---------------------------------------------------------------------------
export ENABLE_ANONCREDS="false"
export ANONCREDS_NAME="example"
export ANONCREDS_VERSION="1.0"
export ANONCREDS_SUPPORT_REVOCATION="false"
